    <Color x:Key="ControlMediumColor">#BEBEBE</Color>
    <Color x:Key="ControlDarkColor">#6F6F70</Color>

    <Color x:Key="BackMouseOverColor">#CDCDCD</Color>

    <Color x:Key="ControlMouseOverColor">#AFAFAF</Color>
    <Color x:Key="ControlPressedColor">#6F6F70</Color>

    <Color x:Key="ThumbTransparentColor">#C0A9A9A9</Color>
    <Color x:Key="ThumbTransparentMouseOverColor">#C0929292</Color>
    <Color x:Key="ThumbTransparentPressedColor">#C05F5F5F</Color>

    <Color x:Key="GlyphColor">#FF444444</Color>
    <Color x:Key="GlyphMouseOverColor">#4A75FF</Color>
    <Color x:Key="GlyphPressedColor">#211AA9</Color>

